<div class="col-md-8 offset-md-2 col"> 
<div id="style">
<br/>

<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

<div class="field">
    <%= f.label :first_name %><br />
      <%= f.text_field :first_name,  placeholder: "First name", class:"field-style" %>
  </div>
<br>
<div class="field">
     <strong><%= f.label :last_name %></strong><br />
    <%= f.text_field :last_name, placeholder: "Last name", class:"field-style"  %>
  </div>
  <br>
  <div class="field">
    <%= f.label :character_I_like %><br />
  <%= f.collection_select :character_id, Character.all, :id, :name, class:"field-style" %> 
  </div>
  <br>

  <div class="field">
    <strong><%= f.label :email %><br /></strong>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"field-style" %>
  </div>
  <br>

  <div class="field">
    <strong><%= f.label :password %></strong>
    <% if @minimum_password_length %>
    <i><em>( minimum <%= @minimum_password_length %> **)</em><i>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class:"field-style" %>
  </div>
<br/>

  <div class="field">
   <strong> <%= f.label :password_confirmation %><br /></strong>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"field-style" %>
  </div>
<br/>

  <div class="actions">
    <%= f.submit "Sign up", class: "btn btn-success" %>
  </div>
  <br>

<%end%>

<%= render "devise/shared/links" %>
</div>
</div>






